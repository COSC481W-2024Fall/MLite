<% content_for :title, "Models" %>

<div class="flex flex-col items-center justify-around gap-7">
  <h1 class="text-5xl">Models</h1>
  <%= link_to new_model_path, class: "btn btn-sm btn-primary" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
    </svg>
    Train New Model
  <% end %>
</div>

<div id="models" class="mt-10 flex flex-col items-center gap-10">
  <% @models.each do |model| %>
    <%= render model %>
  <% end %>
</div>

